[user]
	email = huynguyennbk@gmail.com
	name = Louis Huy Nguyen
[core]
        pager = delta
	excludesfile = /Users/louishuyng/.gitignore_global
	editor = vim
[interactive]
    diffFilter = delta --color-only

[delta]
    navigate = true
[merge]
    conflictstyle = diff3

[diff]
    colorMoved = default
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = current
[rebase]
	autoStash = true

[includeIf "gitdir:~/.dotfiles/"]
  path = ~/.dotfiles/config/gitconfig/.personal

[includeIf "gitdir:~/Dev/Projects/Hodfords/"]
  path = ~/.dotfiles/config/gitconfig/.hodfords

[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
[alias]
    change-commits = "!f() { VAR=$1; OLD=$2; NEW=$3; shift 3; git filter-branch --env-filter \"if [[ \\\"$`echo $VAR`\\\" = '$OLD' ]]; then export $VAR='$NEW'; fi\" $@; }; f "
	bb = !better_branch
