[user]
	email = 40130936+louishuyng@users.noreply.github.com
	name = Louis Huy Nguyen
[core]
	pager = diff-so-fancy | less --tabs=4 -RFX
	excludesfile = /Users/louishuyng/.gitignore_global
[color]
	ui = true
[color "diff-highlight"]
	oldNormal = red bold
	oldHighlight = red bold 52
	newNormal = green bold
[color "diff"]
	meta = 11
	frag = magenta bold
	commit = yellow bold
	old = red bold
	new = green bold
	whitespace = red reverse
[alias]
	co = checkout
	br = branch
	ci = commit
	st = status
[difftool "sourcetree"]
	cmd = opendiff \"$LOCAL\" \"$REMOTE\"
	path = 
[mergetool "sourcetree"]
	cmd = /Applications/Sourcetree.app/Contents/Resources/opendiff-w.sh \"$LOCAL\" \"$REMOTE\" -ancestor \"$BASE\" -merge \"$MERGED\"
	trustExitCode = true
[push]
	default = current
[rebase]
	autoStash = true

[includeIf "~/Dev/Projects/Oivan/sakani-workspace/"]
  path = ~/.gitconfig-oivan
[includeIf "~/Dev/Projects/Productpine/"]
  path = ~/.gitconfig-open-source
[includeIf "~/Dev/Projects/Techchain/"]
  path = ~/.gitconfig-khai-clone
[includeIf "~/.dotfiles/"]
  path = ~/.gitconfig-open-source
[filter "lfs"]
	clean = git-lfs clean -- %f
	smudge = git-lfs smudge -- %f
	process = git-lfs filter-process
	required = true
