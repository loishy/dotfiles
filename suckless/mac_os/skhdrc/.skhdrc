# terminal - like Linux
ctrl + alt - a : open /Applications/draw\.io.app
ctrl + alt - r : open /Applications/RapidAPI.app
ctrl + alt - p : open /Applications/Postman.app
ctrl + alt - s : open /Applications/Slack.app
ctrl + alt - d : open /Applications/DataGrip.app
ctrl + alt - b : open /Applications/Brave\ Browser.app
ctrl + alt - n : open /Applications/Notion.app
ctrl + alt - o : open /Applications/Obsidian.app
ctrl + alt - f : open /Applications/Messenger.app
ctrl + alt - m : open -a Mail
ctrl + alt - c : open /Applications/Discord.app
ctrl + alt - t : open /Applications/Alacritty.app
ctrl + alt - v : open /Applications/Visual\ Studio\ Code.app
ctrl + alt - w : open /Applications/wpsoffice.app
ctrl + alt - h : open /Applications/Burp\ Suite\ Community\ Edition.app

shift + alt - space : yabai -m window --toggle float

# Navigation
cmd - h : yabai -m window --focus west
cmd - j : yabai -m window --focus south
cmd - k : yabai -m window --focus north
cmd - l : yabai -m window --focus east

# Moving windows
shift + ctrl - h : yabai -m window --warp west
shift + ctrl - j : yabai -m window --warp south
shift + ctrl - k : yabai -m window --warp north
shift + ctrl - l : yabai -m window --warp east

# Move focus container to workspace
shift + alt - 1 : yabai -m window --space 1; yabai -m space --focus 1
shift + alt - 2 : yabai -m window --space 2; yabai -m space --focus 2
shift + alt - 3 : yabai -m window --space 3; yabai -m space --focus 3
shift + alt - 4 : yabai -m window --space 4; yabai -m space --focus 4
shift + alt - 5 : yabai -m window --space 5; yabai -m space --focus 5
shift + alt - 6 : yabai -m window --space 6; yabai -m space --focus 6

# Move all the container to workspace
shift + alt - 1 : yabai -m space --move 1
shift + alt - 2 : yabai -m space --move 2
shift + alt - 3 : yabai -m space --move 3
shift + alt - 4 : yabai -m space --move 4
shift + alt - 5 : yabai -m space --move 5
shift + alt - 6 : yabai -m space --move 6

alt - r : yabai -m space --rotate 90

# Focus Space
alt - h : yabai -m space --focus prev
alt - l : yabai -m space --focus next
alt - tab : yabai -m space --focus recent
alt - 1 : yabai -m space --focus 1
alt - 2 : yabai -m space --focus 2
alt - 3 : yabai -m space --focus 3
alt - 4 : yabai -m space --focus 4
alt - 5 : yabai -m space --focus 5
alt - 6 : yabai -m space --focus 6
alt - 7 : yabai -m space --focus 7
alt - 8 : yabai -m space --focus 8
alt - 9 : yabai -m space --focus 9

# Resize windows
shift + alt - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

shift + alt - j : \
    yabai -m window --resize bottom:0:20 ; \
    yabai -m window --resize top:0:20

shift + alt - k : \
    yabai -m window --resize top:0:-20 ; \
    yabai -m window --resize bottom:0:-20

shift + alt - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# equalize size of windows
shift + alt - 0 : yabai -m space --balance

# destroy desktop
cmd + alt - w : chunkc tiling::desktop --annihilate

# Enable/Disable Svim
shift + lctrl + alt - v : brew services start svim
shift + lctrl + alt - n : brew services stop svim
