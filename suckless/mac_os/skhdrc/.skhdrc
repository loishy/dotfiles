# Job apps
alt + shift - b : open /Applications/Arc.app
alt + shift - c : open /Applications/Microsoft\ Teams.app
alt + shift - d : open /Applications/TablePlus.app
alt + shift - f : open /Applications/Marta.app
alt + shift - m : open /Applications/Spark\ Desktop.app
alt + shift - n : open /Applications/Inkdrop.app
alt + shift - s : open /Applications/Slack.app
alt + shift - t : open /Applications/kitty.app; yabai  -m space --focus 1
alt + shift - e : open -a "Mission Control"

alt - tab : yabai -m space --focus recent
cmd - tab : yabai -m window --focus stack.recent

shift + alt - space : yabai -m window --toggle float

# I dont think i need more than 3 screens at the moment
alt - 1 :yabai -m space --focus 1
alt - 2 :yabai -m space --focus 2
alt - 3 :yabai -m space --focus 3
alt - 4 :yabai -m space --focus 4
alt - 5 :yabai -m space --focus 5
alt - 6 :yabai -m space --focus 6
alt + shift - 1: yabai -m window --space 1; yabai -m space --focus 1
alt + shift - 2: yabai -m window --space 2; yabai -m space --focus 2
alt + shift - 3: yabai -m window --space 3; yabai -m space --focus 3
alt + shift - 4: yabai -m window --space 4; yabai -m space --focus 4
alt + shift - 5: yabai -m window --space 5; yabai -m space --focus 5
alt + shift - 6: yabai -m window --space 6; yabai -m space --focus 6

# Zoom
alt - f         : yabai -m window --toggle zoom-fullscreen

# Stack Cycle
alt - j : yabai -m window --focus stack.next || yabai -m window --focus stack.first
alt - k : yabai -m window --focus stack.prev || yabai -m window --focus stack.last

# Moving windows
ctrl + alt - h : yabai -m window --warp west
ctrl + alt - l : yabai -m window --warp east

# Resize windows
shift + alt - h : \
    yabai -m window --resize left:-20:0 ; \
    yabai -m window --resize right:-20:0

shift + alt - l : \
    yabai -m window --resize right:20:0 ; \
    yabai -m window --resize left:20:0

# Balance windows
shift + alt - 0 : \
  yabai -m space --balance

# Focus windows
alt - h : yabai -m window --focus west
alt - l : yabai -m window --focus east

# Change space mode
ctrl + alt - 1 : yabai -m config --space $(yabai -m query --spaces --space | jq '.index') layout stack
ctrl + alt - 2 : yabai -m config --space $(yabai -m query --spaces --space | jq '.index') layout bsp

# Don't commit this
ctrl + alt + shift - y : yabai --restart-service; yabai -m config layout stack;  echo "xxxx" | sudo -S yabai --load-sa; osascript -e 'display notification "Restarted Yabai"'
