#!/usr/bin/env sh

sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

# global settings
yabai -m config mouse_follows_focus          off
yabai -m config focus_follows_mouse          on
yabai -m config window_topmost on
yabai -m config window_placement             first_child
yabai -m config window_topmost               off
yabai -m config window_opacity               on
yabai -m config window_opacity_duration      0.3
yabai -m config window_shadow                float
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config top_padding                  35
yabai -m config bottom_padding               10
yabai -m config left_padding                 18
yabai -m config right_padding                18
yabai -m config window_gap                   15
yabai -m config window_border                on
yabai -m config window_border_width          2
yabai -m config active_window_border_color  0xff48e566
yabai -m config normal_window_border_color  0xffa8a8a8

# Rules

# Data & Cloud
yabai -m rule --add app="^Docker$" manage=off                  space=4
yabai -m rule --add app="^DataGrip$" manage=off                space=4
yabai -m rule --add app="^pgAdmin$" manage=off                 space=4

# Coding
yabai -m rule --add app="kitty" title="Kitty"                  space=1
yabai -m rule --add app="Simulator" manage=off                 space=1
yabai -m rule --add app=Emacs manage=on space=2
yabai -m rule --add app="^Xcode$" manage=off                   space=1
yabai -m rule --add app="^Postman$" manage=off                 space=1
yabai -m rule --add app="^Burp$" manage=off                    space=1
yabai -m rule --add app="^Wireshark$" manage=off               space=1
yabai -m rule --add app="Visual Studio Code" manage=off        space=1

# Penetration Tools
yabai -m rule --add app="^OWASP$" manage=off                   space=1

# Information
yabai -m rule --add app="Brave Browser"         opacity=1      space=2
yabai -m rule --add app="qutebrowser"                          space=2
yabai -m rule --add app="Preview" manage=off                   space=2
yabai -m rule --add app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off space=3

# Communication
yabai -m rule --add app="Slack" title="Slack"                  space=3
yabai -m rule --add app="zoom.us" manage=off                   space=3
yabai -m rule --add app="Skype" manage=off                     space=3
yabai -m rule --add app="Telegram" manage=off                  space=3
yabai -m rule --add app="Discord"                              space=3
yabai -m rule --add app="Microsoft Outlook"                    space=3
yabai -m rule --add app="^Microsoft Teams$" manage=off         space=3

# Music
yabai -m rule --add app="Spotify"          manage=off          space=4
yabai -m rule --add app="QuickTime Player" manage=off          space=4
yabai -m rule --add app="VLC"              mange=off           space=4
yabai -m rule --add app="Tandem"           mange=off           space=4

# Notes
yabai -m rule --add app="Notion"           manage=off          space=4

# Others
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add label="Alfred Preferences" app="^Alfred Preferences$" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="VirtualBox" app="^VirtualBox$" manage=off


# show digital colour meter topmost and on all spaces
yabai -m rule --add app="^Digital Colou?r Meter$" sticky=on

echo "yabai configuration loaded.."
