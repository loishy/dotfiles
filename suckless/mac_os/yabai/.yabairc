#!/usr/bin/env sh

# global settings
yabai -m config mouse_follows_focus          on
yabai -m config window_topmost on
yabai -m config window_placement             first_child
yabai -m config window_topmost               off
yabai -m config window_opacity               on
yabai -m config window_shadow                float
yabai -m config active_window_opacity        1.0
yabai -m config normal_window_opacity        0.90
yabai -m config split_ratio                  0.50
yabai -m config auto_balance                 off
yabai -m config mouse_modifier               fn
yabai -m config mouse_action1                move
yabai -m config mouse_action2                resize

# general space settings
yabai -m config layout                       bsp
yabai -m config window_gap                   15
yabai -m config window_border                on
yabai -m config window_border_width          2
yabai -m config active_window_border_color  0xff48e566
yabai -m config normal_window_border_color  0xffa8a8a8

# padding signals
padding_refresh_command="space_info=\$(yabai -m query --windows --space | jq)
number_of_windows=\$(yabai -m query --windows --space | jq 'length')
top=30
bot=10
side=18

echo \"space_info: \$space_info, number_of_windows: \$number_of_windows\" >> \"\$HOME/sys_log/yabailogs.txt\"

[ \$number_of_windows -eq 1 ] && top=0
[ \$number_of_windows -eq 1 ] && bot=0
[ \$number_of_windows -eq 1 ] && side=18

yabai -m config --space mouse top_padding \$top
yabai -m config --space mouse bottom_padding \$bot
yabai -m config --space mouse left_padding \$side
yabai -m config --space mouse right_padding \$side"

yabai -m signal --add event=window_created action="$padding_refresh_command"
yabai -m signal --add event=window_destroyed action="$padding_refresh_command"
yabai -m signal --add event=application_launched action="$padding_refresh_command"
yabai -m signal --add event=application_terminated action="$padding_refresh_command"

# signals
sudo yabai --load-sa
yabai -m signal --add event=dock_did_restart action="sudo yabai --load-sa"

yabai -m signal --add event=window_destroyed action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"
yabai -m signal --add event=application_terminated action="yabai -m query --windows --window &> /dev/null || yabai -m window --focus mouse"

# Rules

# Labels
yabai -m space 1 --label tool
yabai -m space 2 --label work
yabai -m space 3 --label social
yabai -m space 4 --label management
yabai -m space 5 --label external

# Tool
yabai -m rule --add app="Simulator" manage=off                           space=tool
yabai -m rule --add app="^Xcode$" manage=off                             space=tool
yabai -m rule --add app="^Postman$" manage=off opacity=1                 space=tool
yabai -m rule --add app="^Burp$" manage=off                              space=tool
yabai -m rule --add app="^Wireshark$" manage=off                         space=tool
yabai -m rule --add app="Visual Studio Code" manage=off opacity=1        space=tool
yabai -m rule --add app="^DevToys$" manage=off opacity=1                 space=tool
yabai -m rule --add app="^Docker$" manage=off                            space=tool
yabai -m rule --add app="^OWASP$" manage=off                             space=tool
yabai -m rule --add app="NordVPN" manage=off          opacity=1          space=tool

# Work
yabai -m rule --add app="Alacritty"                            space=work
yabai -m rule --add app="WezTerm"                              space=work
yabai -m rule --add app="qutebrowser"                          space=work
yabai -m rule --add app="Preview" manage=off                   space=work
yabai -m rule --add app="^Safari$" title="^(General|(Tab|Password|Website|Extension)s|AutoFill|Se(arch|curity)|Privacy|Advance)$" manage=off space=work
yabai -m rule --add app="^Firefox Developer Edition$" opacity=1          space=work
yabai -m rule --add app="Tor Browser" manage=off      opacity=1          space=work

# Social
yabai -m rule --add app="Slack" title="Slack"      opacity=1            space=social
yabai -m rule --add app="^JetBrains Space$" title="Space"    opacity=1  space=social
yabai -m rule --add app="zoom.us" manage=off       opacity=1            space=social
yabai -m rule --add app="Skype" manage=off         opacity=1            space=social
yabai -m rule --add app="Telegram" manage=off      opacity=1            space=social
yabai -m rule --add app="Discord"  manage=off      opacity=1            space=social
yabai -m rule --add app="Microsoft Outlook" manage=off   opacity=1      space=social
yabai -m rule --add app="Tandem"           manage=off    opacity=1      space=social
yabai -m rule --add app="^Microsoft Teams$" manage=off   opacity=1      space=social

# Management
yabai -m rule --add app="Pages"            opacity=1            space=management
yabai -m rule --add app="Notion"           opacity=1            space=management
yabai -m rule --add app="Obsidian"         opacity=1            space=management

# External
yabai -m rule --add app="Spotify"          opacity=1 manage=off    space=external
yabai -m rule --add app="^DataGrip$"       opacity=1 manage=off    space=external

# Others
yabai -m rule --add app="QuickTime Player" manage=off
yabai -m rule --add app="VLC"              manage=off
yabai -m rule --add label="Finder" app="^Finder$" title="(Co(py|nnect)|Move|Info|Pref)" manage=off
yabai -m rule --add app="^System Preferences$" manage=off
yabai -m rule --add label="Alfred Preferences" app="^Alfred Preferences$" manage=off
yabai -m rule --add label="App Store" app="^App Store$" manage=off
yabai -m rule --add app="^Activity Monitor$" manage=off
yabai -m rule --add label="Calculator" app="^Calculator$" manage=off
yabai -m rule --add label="VirtualBox" app="^VirtualBox$" manage=off
yabai -m rule --add label="Sourcetree" app="^Sourcetree$" manage=off
yabai -m rule --add label="Clean My Mac" app="^CleanMyMac X$" manage=off
yabai -m rule --add app="Finder" manage=off  opacity=1 


# show digital colour meter topmost and on all spaces
yabai -m rule --add app="^Digital Colou?r Meter$" sticky=on

echo "yabai configuration loaded.."
